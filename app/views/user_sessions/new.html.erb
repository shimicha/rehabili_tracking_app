<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-body">
          <h1 class="text-center mb-4">ログイン</h1>
          <%= form_with url: login_path, local: true do |f| %>
            <div class="form-group">
              <%= f.label :email, class: 'font-weight-bold' %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: 'font-weight-bold' %>
              <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
            </div>
            <div class="text-center">
              <%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
          <div class="text-center mt-3">
            <%= link_to 'パスワードをお忘れの方はこちら', new_password_reset_path, class: 'text-muted' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>