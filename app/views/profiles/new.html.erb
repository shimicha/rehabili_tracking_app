<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1><%= t('.title') %></h1>
      <%= form_with model: @profile, local: true do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control mb-3" %>
          </div>
          <div class="form-group">
            <%= f.label :age %>
            <%= f.text_field :age, class: "form-control mb-3" %>
          </div>
          <div class="sex-field">
              <%= f.label :gender %><br/>
              <%= f.label :man  %>
              <%= f.radio_button :gender, :man %>
              <%= f.label :woman  %>
              <%= f.radio_button :gender, :woman %>
          </div>
          <div class="form-group">
            <%= f.label :history_of_present_illness %>
            <%= f.text_field :history_of_present_illness, class: "form-control mb-3" %>
          </div>
          <div class="form-group">
            <%= f.label :contraindications %>
            <%= f.text_field :contraindications, class: "form-control mb-3" %>
          </div>
          <div class="form-group">
            <%= f.label :medical_history %>
            <%= f.text_field :medical_history, class: "form-control mb-3" %>
          </div>
          <div class="form-group">
            <%= f.label :surgery_history %>
            <%= f.text_field :surgery_history, class: "form-control mb-3" %>
          </div>
          <div class="form-group">
            <%= f.label :icon %>
            <%= f.file_field :icon, class: "form-control", accept: 'image/*', onchange: 'previewImage(preview)' %>
            <%= f.hidden_field :icon_cache %>
            <div class='mt-3 mb-3'>
            <% if @profile.icon.present? %>
                <%= image_tag @profile.icon.url, id: 'preview', size: '100x100', class: 'rounded-circle' %>
            <% end %>
            </div>
          </div>
          <%= f.submit  class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>