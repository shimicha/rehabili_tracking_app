<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1>title</h1>
      <%= link_to 'edit', edit_profile_path(@profile), class: 'btn btn-success float-right' %>
      <div class="profile-details">
          <div class="form-group">
            <strong>age:</strong>
            <%= @profile.age %>
          </div>
          <div class="form-group">
            <strong>gender:</strong>
            <%= @profile.gender %>
          </div>
          <div class="form-group">
            <strong>history_of_present_illness:</strong>
            <%= @profile.history_of_present_illness %>
          </div>
          <div class="form-group">
            <strong>contraindications:</strong>
            <%= @profile.contraindications %>
          </div>
          <div class="form-group">
            <strong>medical_history:</strong>
            <%= @profile.medical_history %>
          </div>
          <div class="form-group">
            <strong>surgery_history:</strong>
            <%= @profile.surgery_history %>
          </div>
          <div class="form-group">
            <strong>icon:</strong>
                <%= image_tag @profile.icon.url, id: 'preview', size: '200x200', class: 'rounded-circle' %>
          </div>
      </div>
    </div>
  </div>
</div>
