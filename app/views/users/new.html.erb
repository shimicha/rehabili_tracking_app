<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-body">
          <h1 class="card-title text-center">新規ユーザー登録</h1>
          <%= form_with model: @user, local: true do |f| %>
            <div class="form-group">
              <%= f.label :name, class: 'font-weight-bold' %>
              <%= f.text_field :name, class: 'form-control', placeholder: 'お名前' %>
            </div>
            <div class="form-group">
              <%= f.label :email, class: 'font-weight-bold' %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: 'font-weight-bold' %>
              <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, class: 'font-weight-bold' %>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワード確認' %>
            </div>
            <%= f.submit "登録する", class: 'btn btn-primary btn-block' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>