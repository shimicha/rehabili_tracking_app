<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5">title</h1>
      <%= form_with model: [:admin, @profile], local: true do |f| %>

        <table class="table">
          <tr>
            <th scope="row">gender</th>
            <td>
              <%= f.label :man %>
              <%= f.radio_button :gender, :man %>
              <%= f.label :woman %>
              <%= f.radio_button :gender, :woman %>
            </td>
          </tr>
          <tr>
            <th scope="row">age</th>
            <td><%= f.text_field :age %></td>
          </tr>
          <tr>
            <th scope="row">history_of_present_illness</th>
            <td><%= f.text_field :history_of_present_illness %></td>
          </tr>
          <tr>
            <th scope="row">contraindications</th>
            <td><%= f.text_field :contraindications %></td>
          </tr>
          <tr>
            <th scope="row">medical_history</th>
            <td><%= f.text_field :medical_history %></td>
          </tr>
          <tr>
            <th scope="row">surgery_history</th>
            <td><%= f.text_field :surgery_history %></td>
          </tr>
          <tr>
            <th scope="row">icon</th>
            <td>
              <%= f.label :icon %>
              <%= f.file_field :icon, onchange: 'previewImage()', class: 'form-control mb-3', accept: 'image/*' %>
              <%= f.hidden_field :icon_cache %>
            </td>
            <td>
              <%= image_tag @profile.icon.url,
                  id: 'preview',
                  size: '200x200', class: 'rounded-circle' %>
            </td>
          </tr>
        </table>
        <%= f.submit  class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
