<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
        <h1 class="card-title text-center">プロフィール新規作成</h1><br><br>
          <%= form_with model: [:admin, @profile], url: admin_profiles_path(user_id: @user_id), local: true do |f| %>
            <%= f.hidden_field :user_id, value: @user_id %>

            <div class="form-group">
              <%= f.label :gender, '性別:', class: 'font-weight-bold' %>
              <div class="form-check form-check-inline">
                <%= f.radio_button :gender, :man, class: 'form-check-input' %>
                <%= f.label :man, '男性:', class: 'form-check-label' %>
              </div>
              <div class="form-check form-check-inline">
                <%= f.radio_button :gender, :woman, class: 'form-check-input' %>
                <%= f.label :woman, '女性:', class: 'form-check-label' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :age, '年齢:', class: 'font-weight-bold' %>
              <%= f.text_field :age, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :history_of_present_illness, '現在の病歴:', class: 'font-weight-bold' %>
              <%= f.text_field :history_of_present_illness, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :contraindications, 'お身体に関する禁忌事項:', class: 'font-weight-bold' %>
              <%= f.text_field :contraindications, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :medical_history, '今までの医療歴:', class: 'font-weight-bold' %>
              <%= f.text_field :medical_history, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :surgery_history, '今までの手術歴:', class: 'font-weight-bold' %>
              <%= f.text_field :surgery_history, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :icon,'プロフィール画像:', class: 'font-weight-bold' %>
              <%= f.file_field :icon, onchange: 'previewImage()', class: 'form-control', accept: 'image/*' %>
              <%= f.hidden_field :icon_cache %>
            </div>
            <div class='mt-3 mb-3 text-center'>
              <%= image_tag @profile.icon.url, id: 'preview', size: '200x200', class: 'rounded-circle' %>
            </div>
            <%= f.submit "保存する", class: "btn btn-primary btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>