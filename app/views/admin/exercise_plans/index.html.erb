<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1><%= t('.title') %></h1>
      <%= link_to t('.edit'), edit_profile_path, class: 'btn btn-success float-right' %>
      <div class="profile-details">
          <div class="form-group">
            <strong><%= t('.title') %>:</strong> <%= @training_menu.title %>
          </div>
          <div class="form-group">
            <strong><%= t('.description') %>:</strong> <%= @training_menu.description %>
          </div>
      </div>
    </div>
  </div>
</div>
