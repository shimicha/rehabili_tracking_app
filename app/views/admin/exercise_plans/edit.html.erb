<div class="container mt-5">
  <h1 class="text-center">実施訓練メニュー編集</h1>
  <%= form_with model: [:admin, @exercise_plan], local: true do |f| %>
    <div class="form-group">
      <%= f.label :training_menu,'トレーニングメニュー', class: 'font-weight-bold' %>
      <%= f.text_field :training_menu, class: 'form-control', required: true %>
      <div class="invalid-feedback">
        トレーニングメニューを入力してください。
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description,'メニュー説明', class: 'font-weight-bold' %>
      <%= f.text_area :description, class: 'form-control', required: true %>
      <div class="invalid-feedback">
        詳細を入力してください。
      </div>
    </div>

    <div class="form-group">
      <%= f.label :images,'メニュー解説の画像', class: 'font-weight-bold' %>
      <%= f.file_field :images, multiple: true, class: 'form-control', accept: 'image/*' %>
      <%= f.hidden_field :images_cache %>
      <div class="invalid-feedback">
        画像ファイルを選択してください。
      </div>
      <div class='mt-3 mb-3 text-center'>
      <% @exercise_plan.images.each do |image| %>
        <%= image_tag image.url, id: 'preview', size: '150x150', class: 'img-square' %>
      <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :images_description,'画像の補足', class: 'font-weight-bold' %>
      <%= f.text_field :images_description, class: 'form-control', required: true %>
      <div class="invalid-feedback">
        画像の説明を入力してください。
      </div>
    </div>

    <div class="form-group">
      <%= f.label :movie_url,'メニューの参考動画のURL', class: 'font-weight-bold' %>
      <%= f.text_field :movie_url, class: 'form-control', required: true %>
      <div class="invalid-feedback">
        動画のURLを入力してください。
      </div>
    </div>

    <div class="form-group">
      <%= f.submit "更新する", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>