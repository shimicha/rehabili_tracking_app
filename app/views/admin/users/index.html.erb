<h2 class="text-center">リハデータ</h2>
<table class="table table-hover">
  <thead>
    <tr class="table-primary">
      <th>ID</th>
      <th>名前</th>
      <th>作成日</th>
      <th>操作</th>
      <th>オプション</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= l(user.created_at, format: :long) %></td>
        <td>
          <%= link_to admin_exercise_progress_comments_path(user_id: user.id), class: 'btn btn-info' do %>
            <i class="fas fa-comment"></i> 投稿フィードバック
          <% end %>
          <%= link_to admin_profiles_path(user_id: user.id), class: 'btn btn-warning' do %>
            <i class="fas fa-user"></i> プロフィール
          <% end %>
          <%= link_to admin_exercise_plans_path(user_id: user.id), class: 'btn btn-success' do %>
            <i class="fas fa-running"></i> エクササイズプラン
          <% end %>
        </td>
        <td>
          <%= link_to admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' do %>
            <i class="fas fa-trash-alt"></i> 削除 
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>